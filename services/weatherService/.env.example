# =============================================================================
# Weather Service Configuration
# =============================================================================
# Copy this file to .env and configure with your environment-specific values

# Environment
# Valid values: development, staging, production
ENV=development

# =============================================================================
# Database Configuration (REQUIRED)
# =============================================================================
DB_HOST=localhost
DB_PORT=3306
DB_USER=root
DB_PASSWORD=your_password
DB_NAME=joker

# =============================================================================
# Redis Configuration (REQUIRED)
# =============================================================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
WEATHER_CACHE_TTL=30m

# =============================================================================
# Scheduler Configuration
# =============================================================================
SCHEDULER_INTERVAL=1m

# =============================================================================
# Firebase Cloud Messaging (REQUIRED)
# =============================================================================
FCM_CREDENTIALS_PATH=/path/to/firebase-credentials.json

# =============================================================================
# Crawler Configuration
# =============================================================================
CRAWLER_TIMEOUT=10s
CRAWLER_RETRY_COUNT=3

# =============================================================================
# Logging Configuration
# =============================================================================
LOG_LEVEL=info
# Valid values: debug, info, warn, error
LOG_OUTPUT=stdout
# For file logging: LOG_OUTPUT=/var/log/weather-collector.log

# =============================================================================
# Metrics Server
# =============================================================================
METRICS_PORT=9090

# =============================================================================
# Health Check Configuration
# =============================================================================
HEALTH_CHECK_INTERVAL=30s
